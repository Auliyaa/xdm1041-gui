{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build (debug)",
			"args": [
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/build.debug"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows": {
				"command": "../.vscode/build-debug.bat",
				"problemMatcher": [
					"$msCompile"
				]
			},
			"linux": {
				"command": "make",
				"problemMatcher": [
					"$gcc"
				]
			}
		}
	]
}
